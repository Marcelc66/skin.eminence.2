<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="group">
            <visible>!Window.IsVisible(1133)</visible>
            <visible>!Window.IsVisible(VideoFullScreen.xml) + !Window.IsVisible(MusicVisualisation.xml)</visible>
            <visible>[!Window.IsVisible(home) + !Window.IsVisible(weather)] | stringcompare(Skin.String(home.style),$LOCALIZE[31181])</visible>
            <animation effect="slide" start="0,64" end="0" time="125">WindowOpen</animation>
            <animation effect="slide" end="0,64" start="0" time="125">WindowClose</animation>
            <control type="group">
                <left>0</left>
                <posy>100r</posy>
                <width>100%</width>
                <height>100</height>  
                <include>Dialog_Background</include>
                <visible>Window.IsVisible(home) | Window.IsVisible(weather)</visible>
            </control>
            <control type="image">
                <posx>42</posx>
                <posy>68r</posy>
                <width>36</width>
                <height>36</height>
                <aspectratio align="center" aligny="center">keep</aspectratio>
                <texture colordiffuse="LineLabel">common/info.png</texture>
            </control>
            <control type="image">
                <posx>-10</posx>
                <posy>120r</posy>
                <width>140</width>
                <height>140</height>  
                <texture>progress/loading-back.png</texture>
                <aspectratio align="center" aligny="center">keep</aspectratio>
            </control>
            <control type="image">
                <posx>-10</posx>
                <posy>120r</posy>
                <width>140</width>
                <height>140</height>  
                <texture>progress/loading-spinner.png</texture>
                <animation effect="rotate" center="auto" start="0" end="360" time="1200" loop="true" condition="Window.IsVisible(DialogNotification.xml)">Conditional</animation>
                <aspectratio align="center" aligny="center">keep</aspectratio>
            </control>
            <control type="label">
                <bottom>39</bottom>
                <left>120</left>
                <right>500</right>
                <height>50</height>
                <aligny>center</aligny>
                <font>Font-ListInfo-Bold</font>
                <textcolor>$VAR[HighlightColor2]</textcolor>
                <label>$INFO[Control.GetLabel(401),Please wait a moment$COMMA updates are installing...   ,]</label>
            </control>
            <control type="label">
                <bottom>7</bottom>
                <left>120</left>
                <right>500</right>
                <height>50</height>
                <aligny>center</aligny>
                <font>Font-RSS</font>
                <textcolor>LineLabel</textcolor>
                <label>$INFO[Control.GetLabel(402)]</label>
            </control>
        </control>
        <control type="group">
            <visible>!Window.IsVisible(Startup.xml)</visible>
            <visible>Window.IsActive(home) | Window.IsActive(weather)</visible>
            <visible>!stringcompare(Skin.String(home.style),$LOCALIZE[31181])</visible>
            <bottom>266</bottom>
            <!-- <animation effect="slide" tween="quadratic" easing="in" time="200" end="0,266" start="0">Hidden</animation> -->
            <animation effect="slide" start="-1200" end="0" time="250">WindowOpen</animation>
            <animation effect="slide" end="-1200" start="0" time="250">WindowClose</animation>
            <animation effect="slide" end="0,160" condition="stringcompare(Skin.String(home.style),$LOCALIZE[31182])">Conditional</animation>
            <include condition="stringcompare(Skin.String(home.style),$LOCALIZE[31182])">Home_Dialogs_TextOnly_Animate</include>
            <include condition="!stringcompare(Skin.String(home.style),$LOCALIZE[31182])">Home_Dialogs_Icons_Animate</include>
         
            <control type="image">
                <left>16</left>
                <bottom>16</bottom>
                <width>32</width>
                <height>32</height>
                <texture colordiffuse="LineLabel">common/info.png</texture>
            </control>
            <control type="label">
                <bottom>16</bottom>
                <left>48</left>
                <width>1040</width>
                <height>32</height>
                <font>Font-RSS</font>
                <textcolor>LineLabel</textcolor>
                <scroll>false</scroll>
                <label>[COLOR=$VAR[HighlightColor2]]$INFO[Control.GetLabel(401),   ][/COLOR]$INFO[Control.GetLabel(402),   ,]</label>
            </control>
        </control>
        <control type="label" id="401"><visible>false</visible></control>
        <control type="label" id="402"><visible>false</visible></control>
    </controls>

</window>