<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- loginscreen -->
	<backgroundcolor>Background</backgroundcolor>
	<defaultcontrol always="true">52</defaultcontrol>

	<controls>
        <!-- Background -->
        <include>Furniture_Background</include>

        <!-- Content -->
        <control type="group">
            <top>dialogtop</top>
            <bottom>60</bottom>
            <left>sidepad</left>
            <right>sidepad</right>
            <include>Animation_SlideIn</include>
            <include>Animation_FadeOut</include>
            <control type="group">
                <top>70</top>
                <left>bigpad</left>
                <right>0</right>
                <height>posterh</height>
                <control type="label">
                    <align>center</align>
                    <top>-16</top>
                    <height>64</height>
                    <label>Make A Viewing Choice</label>
                    <font>Font-Header</font>
                </control>
                <control type="list" id="52">
                    <centertop>50%</centertop>
                    <centerleft>50%</centerleft>
                    <width>1224</width>
                    <height>512</height>
                    <orientation>horizontal</orientation>
                    <itemlayout width="612" height="512">
                        <control type="group">
                            <width>512</width>
                            <centerleft>50%</centerleft>
                            <control type="group">
                                <top>48</top>
                                <control type="image">
                                    <centerleft>50%</centerleft>
                                    <width>256</width>
                                    <height>256</height>
                                    <texture>special://skin/extras/icons/profile-adult.png</texture>
                                    <visible>String.IsEqual(ListItem.Label,WICKED XXX)</visible>
                                </control>
                                <control type="image">
                                    <centerleft>50%</centerleft>
                                    <width>256</width>
                                    <height>256</height>
                                    <texture>special://skin/extras/icons/profile-main.png</texture>
                                    <visible>!String.IsEqual(ListItem.Label,WICKED XXX)</visible>
                                </control>
                                <control type="label">
                                    <centerleft>50%</centerleft>
                                    <width>100%</width>
                                    <align>center</align>
                                    <top>300</top>
                                    <height>64</height>
                                    <aligny>center</aligny>
                                    <font>Font-WidgetInfoTitle</font>
                                    <label>$INFO[ListItem.Label,[UPPERCASE],[/UPPERCASE]]</label>
                                </control>
                                <control type="label">
                                    <centerleft>50%</centerleft>
                                    <width>100%</width>
                                    <align>center</align>
                                    <top>360</top>
                                    <height>64</height>
                                    <aligny>center</aligny>
                                    <font>Font-ListInfo-Small-Bold</font>
                                    <!-- <label>$INFO[ListItem.Label2]</label> -->
                                </control>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="612" height="512">
                        <control type="group">
                            <width>512</width>
                            <centerleft>50%</centerleft>
                            <control type="image">
                                <texture border="5">common/metal-border-button.png</texture>
                                <aspectratio>stretch</aspectratio>
                            </control>
                            <control type="group">
                                <top>48</top>
                                <control type="image">
                                    <centerleft>50%</centerleft>
                                    <width>256</width>
                                    <height>256</height>
                                    <texture>special://skin/extras/icons/profile-adult.png</texture>
                                    <visible>String.IsEqual(ListItem.Label,WICKED XXX)</visible>
                                </control>
                                <control type="image">
                                    <centerleft>50%</centerleft>
                                    <width>256</width>
                                    <height>256</height>
                                    <texture>special://skin/extras/icons/profile-main.png</texture>
                                    <visible>!String.IsEqual(ListItem.Label,WICKED XXX)</visible>
                                </control>
                                <control type="label">
                                    <centerleft>50%</centerleft>
                                    <width>100%</width>
                                    <align>center</align>
                                    <top>300</top>
                                    <height>64</height>
                                    <aligny>center</aligny>
                                    <font>Font-WidgetInfoTitle</font>
                                    <textcolor>Selected</textcolor>
                                    <label>$INFO[ListItem.Label,[UPPERCASE],[/UPPERCASE]]</label>
                                </control>
                                <control type="label">
                                    <centerleft>50%</centerleft>
                                    <width>100%</width>
                                    <align>center</align>
                                    <top>360</top>
                                    <height>64</height>
                                    <aligny>center</aligny>
                                    <font>Font-ListInfo-Small-Bold</font>
                                    <textcolor>Selected</textcolor>
                                    <label>[CR]TV PLUS MEDIA CENTER[CR]</label>
                                    <visible>!String.IsEqual(ListItem.Label,WICKED XXX)</visible>
                                </control>
                                <control type="label">
                                    <centerleft>50%</centerleft>
                                    <width>100%</width>
                                    <align>center</align>
                                    <top>360</top>
                                    <height>64</height>
                                    <aligny>center</aligny>
                                    <font>Font-ListInfo-Small-Bold</font>
                                    <textcolor>Selected</textcolor>
                                    <label>[CR]ADULTS ONLY SECTION[CR]You must be 18+ years of age to enter</label>
                                    <visible>String.IsEqual(ListItem.Label,WICKED XXX)</visible>
                                </control>
                            </control>
                        </control>
                    </focusedlayout>
                </control>

            </control>
        </control>
        <control type="label" id="2"><visible>false</visible></control>

	</controls>

</window>