<window>
    <defaultcontrol always="true">9001</defaultcontrol>
    <controls>
        <control type="group">
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
            <control type="image" description="Background">
                <width>100%</width>
                <height>100%</height>
                <texture background="true" colordiffuse="Background">common/white.png</texture>
            </control>
            <control type="image" description="Background">
                <width>100%</width>
                <height>100%</height>
                <fadetime>500</fadetime>
                <texture background="true">$VAR[Home_PowerMenu_Background]</texture>
            </control>

            <control type="group">
                <height>76</height>
                <itemgap>20</itemgap>
                <centerleft>50%</centerleft>
                <top>70</top>
                <width>1850</width>
                <control type="group">
                    <top>-20</top>
                    <bottom>-20</bottom>
                    <right>-20</right>
                    <left>-20</left>
                    <control type="image">
                        <texture border="5">common/metal-border-button.png</texture>
                    </control>
                    <control type="image">
                        <top>3</top>
                        <bottom>3</bottom>
                        <right>3</right>
                        <left>3</left>
                        <texture colordiffuse="Background">common/white.png</texture>
                    </control>
                </control>
                <control type="grouplist">
                    <width>100%</width>
                    <height>92</height>
                    <top>-10</top>
                    <orientation>horizontal</orientation>
                    <align>center</align>
                    <itemgap>25</itemgap>
                    <usecontrolcoords>true</usecontrolcoords>
                    <control type="image">
                        <width>64</width>
                        <height>100%</height>
                        <aspectratio aligny="center">keep</aspectratio>
                        <texture colordiffuse="ListLabel">common/infobubble.png</texture>
                    </control>
                    <control type="textbox">
                        <width>980</width>
                        <height>100%</height>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>Font-RSS</font>
                        <label>[B][COLOR=$VAR[HighlightColor2]]Are you sure you want to Quit?[/COLOR] Click [COLOR=$VAR[HighlightColor2]]QUIT[/COLOR] to confirm. [COLOR=$VAR[HighlightColor2]]IMPORTANT:[/COLOR] Users should ALWAYS use QUIT to properly shutdown TVPMC.[/B] [I](Improper shutdown may lead to TVPMC software corruption and is NOT covered by any warranty!)[/I]</label>
                    </control>
                    <control type="button" id="9001">
                        <top>10</top>
                        <label>Quit (Press OK to confirm)</label>
                        <align>center</align>
                        <onclick>Close</onclick>
                        <onclick>XBMC.Quit()</onclick>
                        <onright>9002</onright>
                        <ondown>9003</ondown>
                        <onfocus>SetProperty(PowerBackground,special://skin/tvpmc/bg/quit2.jpg,home)</onfocus>
                        <include>Defs_OptionButton2</include>
                    </control>
                    <control type="button" id="9002">
                        <top>10</top>
                        <label>Screensaver (Launch now)</label>
                        <align>center</align>
                        <onclick>Close</onclick>
                        <onleft>9001</onleft>
                        <ondown>9003</ondown>
                        <onclick>ActivateScreensaver</onclick>
                        <onfocus>SetProperty(PowerBackground,special://skin/tvpmc/bg/default1.jpg,home)</onfocus>
                        <include>Defs_OptionButton2</include>
                    </control>
                </control>
            </control>
