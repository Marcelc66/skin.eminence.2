<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <control type="group">
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
            <control type="image" description="Background">
                <width>100%</width>
                <height>100%</height>
                <texture background="true" colordiffuse="Background">common/white.png</texture>
            </control>
            <control type="image" description="Background">
                <width>100%</width>
                <height>100%</height>
                <fadetime>500</fadetime>
                <texture background="true">$VAR[Home_PowerMenu_Background]</texture>
            </control>

            <control type="grouplist">
                <orientation>horizontal</orientation>
                <height>64</height>
                <itemgap>20</itemgap>
                <centerleft>50%</centerleft>
                <top>80</top>
                <align>center</align>
                <visible>!Control.HasFocus(9002)</visible>
                <control type="image">
                    <width>64</width>
                    <height>64</height>
                    <texture colordiffuse="ListLabel">common/infobubble.png</texture>
                </control>
                <control type="textbox">
                    <width>1080</width>
                    <height>64</height>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>Font-RSS</font>
                    <label>[B][COLOR=red]Are you sure you want to quit?[/COLOR][/B] Click QUIT to confirm. You must use QUIT when leaving TV PLUS. [CR]Please be patient as it may take up to 1 min to save your files & to shutdown properly.</label>
                </control>
            </control>

            <control type="grouplist" id="9000">
                <ondown>Close</ondown>
                <onup>Close</onup>
                <onleft>noop</onleft>
                <onright>noop</onright>
                <orientation>horizontal</orientation>
                <align>center</align>
                <centerleft>50%</centerleft>
                <bottom>90</bottom>
                <itemgap>20</itemgap>
                <height>72</height>
                <control type="button" id="9001">
                    <label>Quit (Press OK to confirm)</label>
                    <onclick>Close</onclick>
                    <onclick>XBMC.Quit()</onclick>
                    <onfocus>SetProperty(PowerBackground,special://skin/tvpmc/bg/quit2.jpg,home)</onfocus>
                    <include>Defs_OptionButton2</include>
                </control>
                <control type="button" id="9002">
                    <label>Screensaver (Launch now)</label>
                    <onclick>Close</onclick>
                    <onclick>ActivateScreensaver</onclick>
                    <onfocus>SetProperty(PowerBackground,special://skin/tvpmc/bg/default1.jpg,home)</onfocus>
                    <include>Defs_OptionButton2</include>
                </control>
                <control type="button" id="9003">
                    <label>222</label>
                    <onclick>Close</onclick>
                    <onfocus>SetProperty(PowerBackground,special://skin/tvpmc/bg/default1.jpg,home)</onfocus>
                    <include>Defs_OptionButton2</include>
                </control>
            </control>
        </control>
    </controls>
</window>